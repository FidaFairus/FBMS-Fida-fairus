use assesment;
create table flight(
flight_no int primary key not null,
flight_name varchar(50) not null,
flight_description varchar(100),
flight_total_capacity int
);

use assesment;
create table Passenger(
id int primary key not null,
name varchar(50) not null,
username varchar(50) not null unique,
email varchar(50) not null unique,
password varchar(80) not null unique,
mobile int not null unique,
address varchar(80) not null,
dob date
);

create table flight_schedule (
id int primary key not null,
flight_from varchar(70) not null,
flight_to varchar(70) not null,
flight_date date not null,
flight_time time not null,
flight_number int not null ,
constraint fk_flight_number foreign key (flight_number) references flight(flight_no)
);

create table booked_ticket(
ticket_number int not null unique,
date_of_booking date not null,
date_of_travel date not null,
flight_no int not null,
constraint fk_flight_no foreign key (flight_no) references flight(flight_no),
flight_from varchar(80) not null,
flight_to varchar(80) not null,
flight_time time not null,
boarding_time time not null,
flight_seat varchar(40) not null,
passenger_id int not null,
constraint fk_passenger_id foreign key (passenger_id) references Passenger(id)
);






